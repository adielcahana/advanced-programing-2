<Window x:Class="ClientGui.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientGui"
        xmlns:clientGui="clr-namespace:ClientGUI"
        mc:Ignorable="d"
        Title="Game" Height="1000" Width="1000">
    <DockPanel x:Name="Dock" RenderTransformOrigin="1.199,0.815">
        <StackPanel Height="100"  DockPanel.Dock="Top" Orientation="Horizontal" >
            <Button x:Name="Solve_maze" Content="Solve maze" FontSize="22" Width="140" Margin="250,30,50,30"/>
            <Button x:Name="Restart_game" Content="Restart game" FontSize="22" Width="140" Margin="0,30,50,30"/>
            <Button x:Name="Menu" Content="Main menu" FontSize="22" Width="140" Margin="0,30,250,30"/>
        </StackPanel>
        <Canvas x:Name="Canvas" DockPanel.Dock= "Bottom"></Canvas>
    </DockPanel>
</Window>
