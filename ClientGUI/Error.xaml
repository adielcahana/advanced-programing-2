<Window x:Class="ClientGUI.Error"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientGUI"
        mc:Ignorable="d"
        Title="Error" Height="300" Width="300" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label x:Name="ErrorTitle" Content="ERROR!!!" HorizontalAlignment="Left" HorizontalContentAlignment="Center" FontSize="40" Foreground="Red" Margin="35,30,0,0" VerticalAlignment="Top" Width="215" Height="65"/>
        <TextBox x:Name="ErrorMessage" HorizontalAlignment="Center" HorizontalContentAlignment="Center" FontSize="15" Height="78" Margin="10,117,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="272"/>
        <Button x:Name="Return" Content="Back" HorizontalAlignment="Left" HorizontalContentAlignment="Center" FontSize="30"  Margin="85,210,0,0" VerticalAlignment="Top" Width="105" Height="49" Click="Return_Click"/>
        <Grid.Background>
            <ImageBrush ImageSource="resources/background maze.jpg"/>
        </Grid.Background>
    </Grid>
</Window>
