<Window x:Class="ClientGUI.view.Games.MultiPlayerGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientGUI.view.Games"
        xmlns:view="clr-namespace:ClientGUI.view"
        mc:Ignorable="d"
        Title="{Binding MazeName}" Height="700" Width="1000" KeyDown="Window_KeyDown" ResizeMode="CanResizeWithGrip" WindowStartupLocation="CenterScreen">
    <DockPanel x:Name="Dock" RenderTransformOrigin="1.199,0.815" HorizontalAlignment="Center">
        <StackPanel Height="100"  DockPanel.Dock="Top" Orientation="Horizontal" >
            <Button x:Name="Menu" Content="Back to main menu" HorizontalAlignment="Right" FontSize="22" Width="235" Click="Menu_Click" Margin="0,0,0,45" RenderTransformOrigin="1.979,0.818"/>
        </StackPanel>
        <view:MazeBoard x:Name="Board1" DockPanel.Dock="Left" Rows="{Binding Rows}" Cols="{Binding Cols}" Maze="{Binding MazeSrl}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="50,10,50,50"/>
        <view:MazeBoard x:Name="Board2" DockPanel.Dock="Left" Rows="{Binding Rows}" Cols="{Binding Cols}" Maze="{Binding MazeSrl}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="50,10,50,50"/>
    </DockPanel>
</Window>